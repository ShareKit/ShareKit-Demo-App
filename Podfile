platform :ios, '8.0'

target 'ShareKit Demo App (CocoaPods)' do
    ### For regular projects
    #pod 'ShareKit'

    ### Alternatively use some sharers only
    #pod 'ShareKit/Facebook'
    #pod 'ShareKit/Twitter'

    ### For development
    pod 'ShareKit', :path => 'Submodules/ShareKit'
end

target 'ShareKit Swift Demo App (CocoaPods)' do
    use_frameworks!
    ### For regular projects
    #pod 'ShareKit'

    ### Alternatively use some sharers only
    #pod 'ShareKit/Facebook'
    #pod 'ShareKit/Twitter'

    ### For development
    pod 'ShareKit/Pinterest', :path => 'Submodules/ShareKit'
    pod 'ShareKit/OneNote', :path => 'Submodules/ShareKit'
    pod 'ShareKit/Flickr', :path => 'Submodules/ShareKit'
end

